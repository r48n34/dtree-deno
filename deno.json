{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["deno.window"],
        "strict": true
    },
    "tasks": {
        "start": "deno run --allow-all --unstable src/index.ts",
        "dev":   "deno run --allow-all --unstable src/index.ts -n",
        "install": "deno install --allow-all --unstable -n dtree -f src/index.ts",
        "pwd": "cd $INIT_CWD && pwd"
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["src/"]
    }
}
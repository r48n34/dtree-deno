{
    "name": "@reemo/dtree-deno",
    "version": "0.2.1",
    "license": "MIT",
    "exports": "./src/mod.ts",
    "compilerOptions": {
        "lib": ["deno.window"],
        "strict": true
    },
    "tasks": {
        "start": "deno run --allow-all --unstable-ffi src/mod.ts",
        "dev":   "deno run --allow-all --unstable-ffi src/mod.ts -n",
        "install": "deno install --allow-all --unstable-ffi -n dtree -f src/mod.ts",
        "test": "deno test --allow-read test/general.test.ts",
        "pwd": "cd $INIT_CWD && pwd"
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["src/"]
    }
}